<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
    xmlns="http://www.ontimize.com/schema/jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
    catalog="" schema="${mainschema}" table="tuser"
    datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>user_</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>user_</Column>
    </UpdateKeys>
    <Queries>
        <Query id="default">
            <ValidColumns>
                <Column>user_</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>email</Column>
                <Column>nif</Column>
                <Column>userblocked</Column>
                <Column>lastpasswordupdate</Column>
                <Column>firstlogin</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.tuser
                    #WHERE#
                ]]>
            </Sentence>
        </Query>    
        <Query id="login">
            <ValidColumns>

                <Column>user_</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>email</Column>
                <Column>nif</Column>
                <Column>userblocked</Column>
                <Column>lastpasswordupdate</Column>
                <Column>firstlogin</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT 
                        #COLUMNS#
                    FROM                        
                        ${mainschema}.tuser
                    #WHERE#
                ]]>
            </Sentence>
        </Query>

        <Query id="partners">

            <AmbiguousColumns>
                <AmbiguousColumn name="user_" prefix="u" />
            </AmbiguousColumns>
            <ValidColumns>

                <Column>user_</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>email</Column>
                <Column>nif</Column>
                <Column>userblocked</Column>
                <Column>lastpasswordupdate</Column>
                <Column>firstlogin</Column>

            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.tuser u
                        JOIN ${mainschema}.tuser_role ur ON u.user_ = ur.user_
                        JOIN ${mainschema}.trole r ON ur.id_rolename = r.id_rolename AND r.rolename = 'partner'

                    #WHERE#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>